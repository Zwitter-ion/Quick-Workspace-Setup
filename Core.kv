<Main>:

    
    BoxLayout:
        size: root.width, root.height
        cols: 1
        spacing: 10
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'
            cols:1
            size: root.width, root.height
            spacing: 5
            padding: 5
            size_hint: .9, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
            id:grid

            
        BoxLayout:
            orientation: 'horizontal'
            size: root.width, root.height
            cols:1
            spacing: 5
            padding: 10
            font_name: "Comic"
            size_hint: .5, .2
            pos_hint: {'center_x': .5, 'center_y': .5}
            Button:
                text: 'Add Mode'
                on_press: root.add_mode()
                background_normal: ''
                background_color: [200,200,200,1]
                color: '##2E4053'
                font_name: "Comic"
                font_size: 20
