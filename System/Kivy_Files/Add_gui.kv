#: import Factory kivy.factory.Factory
<PopUp@Popup>
    auto_dismiss: False
    size_hint: 0.5, 0.5
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    title: 'New mode save!'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Please reopen the app for the changes to take effect'
            font_size: 15
            color: [0.41, 0.42, 0.74, 1]
            font_name: 'Comic'
        Button:
            text: 'Exit'
            on_press: exit()
            background_normal: ''
            color: [0.41, 0.42, 0.74, 1]
            font_name: 'Comic'     
<add>:
    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'
        spacing: 10
        BoxLayout:
            orientation: 'horizontal'
            id: title
            size_hint: 1, 0.1
            size: 10, .25
            pos_hint: {'center_x': .5, 'center_y': .5}
            color: [0.41, 0.42, 0.74, 1]
            Label:
                text: 'Path'
                font_name: "Comic"
                color: [0.41, 0.42, 0.74, 1]
                font_size: 30
            Label:
                text: 'File'
                font_name: "Comic"
                color: [0.41, 0.42, 0.74, 1]
                font_size: 30
        GridLayout:
            cols:2
            size: root.width, root.height
            size_hint: 1, 1
            pos_hint: {'center_x': .5, 'center_y': .5}
            id: grid
            font_name: "Comic"
        BoxLayout:
            orientation: 'horizontal'
            size: root.width, root.height
            size_hint: .5, 0.2
            pos_hint: {'center_x': .5, 'center_y': .5}
            id: buttons
            padding: 10
            spacing: 10
            Button:
                text: 'Add'
                on_press: root.press_add_mode()
                font_name: "Comic"
                background_normal: ''
                color: [0.41, 0.42, 0.74, 1]
                font_size: 20
            Button:
                id:save
                text: 'Save'
                disabled: True
                font_name: "Comic"
                background_normal: ''
                color: [0.41, 0.42, 0.74, 1]
                on_press: root.save_data()
                font_size: 20